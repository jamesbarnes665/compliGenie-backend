{
    "Logging":  {
                    "LogLevel":  {
                                     "Default":  "Information",
                                     "Microsoft.AspNetCore":  "Warning"
                                 }
                },
    "AllowedHosts":  "*",
    "OpenAI":  {
                   "BaseUrl":  "https://api.openai.com/v1",
                   "Model":  "gpt-4-turbo-preview",
                   "ApiKey":  "$env:OPENAI_API_KEY"
               },
    "PolicyGeneration":  {
                             "MaxPageCount":  12,
                             "MinPageCount":  8,
                             "TimeoutSeconds":  30,
                             "MaxRetries":  3,
                             "WordsPerPage":  250,
                             "DefaultTemperature":  0.7
                         }
}
